<div class="main-container">
  <section class="contained-projects">
    <div class="col-sm-8 col-sm-offset-2">
      <h3 class='text-center'>New Project</h3>
      <%= form_for :project, url: project_index_path, html: { role: 'form', "data-toggle" => "validator" } do |p| %>
        <div class="form-md-line-input">
          <div class="form-group">
            <%= hidden_field_tag 'project[owner]', @owner.id %>
            <%= p.text_field :name, class: "form-control", placeholder: "Enter project name", "data-error"=>"Must not be empty", required: true %>
            <%= p.text_area :description, class: "form-control", placeholder: "Enter project description", rows: '6', "data-error"=>"Must not be empty", required: true %>
          </div>
          <div class="col-sm-1 col-sm-offset-3 form-group">
            <%= p.submit "Create", class: "btn btn-default", type: "submit" %>
          </div>
        </div>
      <% end %>
      <div class="col-sm-offset-3 text-center form-group">
        <%= link_to "Cansel", dashboard_index_path, class: "btn btn-default" %>
      </div>
    </div>
  </section>
</div>
