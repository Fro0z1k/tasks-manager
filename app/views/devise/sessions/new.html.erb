<%= render 'common/header' %>
<div class="main-container">
  <section class="signup-divider overlay">
    <div class="background-image-holder parallax-background overlay">
      <%= image_tag('body1.jpg') %>
    </div>

    <div class="container">
      <div class="col-sm-10 col-sm-offset-1 text-center">
        <span class="text-white"><%= devise_error_messages! %></span>
        <h1 class="text-white">Log In</h1>
      </div>
      <div class="col-sm-4 col-sm-offset-4 text-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, class: "validate-required", type: "text", name: "user[email]", placeholder: "Your Email" %>
          <%= f.password_field :password, autocomplete: "off", class: "validate-required", type: "text", name: "user[password]", placeholder: "Password" %>
          <% if devise_mapping.rememberable? -%>
            <div class="text-white">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit "Log In", class: "btn", type: "submit" %>
        <% end %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-sm' %>
        <%= link_to 'Forgot?', new_user_password_path, class: 'btn btn-sm' %>
      </div>
    </div><!--end of container-->
  </section>
</div>




<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
