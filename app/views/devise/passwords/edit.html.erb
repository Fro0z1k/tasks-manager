<%= render 'common/header' %>
<div class="main-container">
  <section class="signup-divider overlay">
    <div class="background-image-holder parallax-background overlay">
      <%= image_tag('body1.jpg') %>
    </div>

    <div class="container">
      <div class="col-sm-10 col-sm-offset-1 text-center">
        <span class="text-white"><%= devise_error_messages! %></span>
        <h1 class="text-white">Change your password</h1>
      </div>
      <div class="col-sm-4 col-sm-offset-4 text-center">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "validate-required", type: "text", name: "user[password]", placeholder: "New Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate-required", type: "text", name: "user[password_confirmation]", placeholder: "New Password Confirmation" %>
          <%= f.submit "Change my password", class: "btn", type: "submit" %>
        <% end %>
        <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-sm" %>
        <%= link_to 'Log In', new_user_session_path, class: 'btn btn-sm' %>
      </div>
    </div><!--end of container-->
  </section>
</div>
