<div class="main-container">
  <section class="signup-divider overlay">
    <div class="background-image-holder parallax-background overlay">
      <%= image_tag('body1.jpg') %>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1 text-center">
          <h1 class="text-white">Registration</h1>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "email-form", "original-error" => "Please complete all fields correctly") do |f| %>
          <div class="col-sm-10 col-sm-offset-1 text-center">
            <%= f.text_field :name, autofocus: true, class: "input-standard validate-required", type: "text", name: "name", placeholder: "Your Name" %>
            <%= f.email_field :email, autofocus: true, class: "input-standard validate-required", type: "text", name: "email", placeholder: "Your Email" %>
          </div>
          <div class="col-sm-10 col-sm-offset-1 text-center">
            <%= f.password_field :password, autocomplete: "off", class: "input-standard validate-required", type: "text", name: "password", placeholder: "Password" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-standard validate-required", type: "text", name: "password", placeholder: "Password Confirmation" %>
          </div>
          <div class="col-sm-10 col-sm-offset-1 text-center">
            <br>
            <%= f.submit "Sign up", class: "btn btn-sm", type: "submit" %>
          </div>
        <% end %>
        </div>
      </div><!--end of row-->
    </div><!--end of container-->
  </section>
</div>