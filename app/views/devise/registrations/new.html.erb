<%= render 'common/header' %>
<div class="main-container">
  <section class="signup-divider overlay">
    <div class="background-image-holder parallax-background overlay">
      <%= image_tag('body1.jpg') %>
    </div>

    <div class="container">
      <div class="col-sm-10 col-sm-offset-1 text-center">
        <span class="text-white"><%= devise_error_messages! %></span>
        <h1 class="text-white">Registration</h1>
      </div>
      <div class="col-sm-4 col-sm-offset-4 text-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, class: "validate-required", type: "text", name: "user[email]", placeholder: "Your Email" %>
          <%= f.password_field :password, autocomplete: "off", class: "validate-required", type: "text", name: "user[password]", placeholder: "Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate-required", type: "text", name: "user[password_confirmation]", placeholder: "Password Confirmation" %>
          <%= f.submit "Sign up", class: "btn btn-default", type: "submit" %>
        <% end %>
        <%= link_to 'Log In', new_user_session_path, class: 'btn btn-sm' %>
        <%= link_to 'Forgot?', new_user_password_path, class: 'btn btn-sm' %>
      </div>
    </div><!--end of container-->
  </section>
</div>
